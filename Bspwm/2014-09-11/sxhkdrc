#
# bspwm hotkeys
#

# quit bspwm
alt + shift + q
	bspc quit

# reload bspwm
super + alt + ctrl + q
super + alt + {_,shift + }Escape
	{bspc query -T > "$BSPWM_TREE"; \
	    bspc query -H > "$BSPWM_HISTORY"; \
	        bspc quit,\
	 bspc quit 1}

# close focused window
alt + shift + c
#	bspc window -c
    sh ~/.config/bspwm/Scripts/bspwm_close_window.sh

# toggle layout between monocle and tiled
alt + t
    bspc desktop -l next

# balance the tree
alt + b
	bspc desktop -B

# toggle floating/fullscreen
alt + {s,f}
    bspc window -t {floating,fullscreen}

# alt + {grave,Tab}
#	    bspc {window,desktop} -f last

# alt + apostrophe
# 	bspc window -s last

#alt + {o,i}
# 	bspc control --record-history off; \
# 	bspc window {older,newer} -f; \
# 	bspc control --record-history on

# alt + y
# 	bspc window -w last.manual

# makes focused window the biggest one
alt + m
	bspc window -s biggest

# alt + {_,shift + }{h,j,k,l}
# 	bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }c
	bspc window -f {next,prev}

# Circulate leaves of the tree backward or forward
alt + {comma,period}
	bspc desktop -C {backward,forward}

# alt + bracket{left,right}
# 	bspc desktop -f {prev,next}

# alt + ctrl + {h,j,k,l}
# 	bspc window -p {left,down,up,right}

# alt + ctrl + {_,shift + }space
# 	bspc {window -p cancel,desktop -c}

# resize nodes
alt + {ograve,j}
    S={+,-}; \
    bspc window -e left $\{S\}20 || \
    bspc window -e right $\{S\}20
alt + {l,k}
    S={+,-}; \
    bspc window -e down $\{S\}20 || \
    bspc window -e up $\{S\}20

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

# focus the given desktop or move a window to a given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

# make sxhkd reload its configuration files:
super + alt + z
	pkill -USR1 -x sxhkd

#####
# by me
#####

# multimedia keys

# raises volume
XF86AudioRaiseVolume
    amixer -D pulse sset Master 5%+

# lowers volume
XF86AudioLowerVolume
    amixer -D pulse sset Master 5%-

# mutes
XF86AudioMute
    amixer -D pulse sset Master toggle

# audio stop
XF86AudioStop
    mpc stop

# audio previous track
XF86AudioPrev
    mpc prev

# audio next track
XF86AudioNext
    mpc next

# audio play
XF86AudioPlay
    mpc toggle

XF86MonBrightnessUp
    brightnessScript

XF86MonBrightnessDown
    brightnessScript

# reload panel
alt + q
	pkill panel && panel dzen2

# start urxvt terminal
alt + shift + Return
	urxvt -lsp 2

# start gmrun
alt + p
	gmrun

# focus on tiled xmonad legacy
alt + Tab
    bspc window -f {next.tiled}

# flip leaves vertically
alt + v
    bspc desktop -F vertical

# flip leaves horizontally
alt + c
    bspc desktop -F horizontal

# decolor focused window border
super + z
    bspc config focused_border_color "#303030"

# recolor focused window border
super + x
    bspc config focused_border_color "#787878"
