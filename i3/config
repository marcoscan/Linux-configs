### MULTIMEDIA KEYS

# add  --no-startup-id  to avoid mouse cursor spinning for 60 secs after key pressing

# raises volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+

# lowers volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%-

# mutes
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle

# audio stop
bindsym XF86AudioStop exec --no-startup-id mpc stop

# audio previous track
bindsym XF86AudioPrev exec --no-startup-id mpc prev

# audio next track
bindsym XF86AudioNext exec --no-startup-id mpc next

# audio play
bindsym XF86AudioPlay exec --no-startup-id mpc toggle

# monitor brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessScript
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessScript


